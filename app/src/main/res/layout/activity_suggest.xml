<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/suggest_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context="com.iqinbao.android.songstv.activity.Suggest"
    >
    <ImageView
        android:id="@+id/suggest_image"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_150"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/w_320"
            android:layout_height="@dimen/h_95"
            android:focusable="false"
            android:gravity="top|center_horizontal"
            android:text="问题反馈"
            android:textColor="@color/white_qinbao"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/w_50" />

        <ImageView
            android:id="@+id/image_text"
            android:layout_width="@dimen/w_320"
            android:layout_height="@dimen/h_75"
            android:layout_alignBottom="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/select_item_1"
            android:focusable="false"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_105"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/w_88"
            android:layout_marginTop="@dimen/h_45"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:focusable="false"
                android:gravity="top"
                android:text="按"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_no_select"
                android:textSize="@dimen/w_45" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:layout_marginLeft="@dimen/w_8"
                android:focusable="false"
                android:text="确认键"
                android:textColor="@color/white_qinbao"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/w_45" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:focusable="false"
                android:text="可以反馈哦"
                android:layout_marginLeft="@dimen/w_8"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_no_select"
                android:textSize="@dimen/w_45" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_53"
            android:layout_marginRight="@dimen/w_55"
            android:layout_marginTop="@dimen/h_12"
            android:focusable="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_misplay"
                android:layout_width="@dimen/w_302"
                android:layout_height="@dimen/h_232"
                android:layout_marginBottom="@dimen/h_12"
                android:layout_marginLeft="@dimen/w_35"
                android:layout_marginRight="@dimen/w_35"
                android:layout_marginTop="@dimen/h_12"
                android:scaleType="fitXY"
                android:background="@drawable/s001"
                android:focusable="true" />

            <ImageView
                android:id="@+id/bt_carlton"
                android:layout_width="@dimen/w_302"
                android:layout_height="@dimen/h_232"
                android:layout_marginBottom="@dimen/h_12"
                android:layout_marginLeft="@dimen/w_35"
                android:layout_marginRight="@dimen/w_35"
                android:layout_marginTop="@dimen/h_12"
                android:scaleType="fitXY"
                android:background="@drawable/s002"
                android:focusable="true"
                android:gravity="center" />

            <ImageView
                android:id="@+id/bt_nosynch"
                android:scaleType="fitXY"
                android:layout_width="@dimen/w_302"
                android:layout_height="@dimen/h_232"
                android:layout_marginBottom="@dimen/h_12"
                android:layout_marginLeft="@dimen/w_35"
                android:layout_marginRight="@dimen/w_35"
                android:layout_marginTop="@dimen/h_12"
                android:background="@drawable/s003"
                android:focusable="true"
                android:gravity="center"

                />

            <ImageView
                android:id="@+id/bt_fuzzy"
                android:scaleType="fitXY"
                android:layout_width="@dimen/w_302"
                android:layout_height="@dimen/h_232"
                android:layout_marginBottom="@dimen/h_12"
                android:layout_marginLeft="@dimen/w_35"
                android:layout_marginRight="@dimen/w_35"
                android:layout_marginTop="@dimen/h_12"
                android:background="@drawable/s004"
                android:focusable="true"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_53"
            android:focusable="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_inconvenient"
                android:scaleType="fitXY"
                android:layout_width="@dimen/w_302"
                android:layout_height="@dimen/h_232"
                android:layout_marginBottom="@dimen/h_16"
                android:layout_marginLeft="@dimen/w_35"
                android:layout_marginRight="@dimen/w_35"
                android:layout_marginTop="@dimen/h_16"
                android:background="@drawable/s005"
                android:focusable="true"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/w_88"
            android:layout_marginTop="@dimen/h_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qq_2570082999"
                android:textSize="@dimen/w_45"
                android:layout_marginLeft="@dimen/w_5"
                android:textColor="@color/text_no_select"
                />
            <TextView
                android:id="@+id/textView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w_45"
                android:text="@string/qinbaoapp_qq_com"
                android:textColor="@color/text_no_select"
                />
            <TextView
                android:id="@+id/textView_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textSize="@dimen/w_45"
                android:textColor="@color/text_no_select"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
