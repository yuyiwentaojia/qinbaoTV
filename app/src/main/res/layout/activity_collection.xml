<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collect_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context="com.iqinbao.android.songstv.activity.CollectionActivity">
    <ImageView
        android:id="@+id/collect_image"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="@dimen/w_320"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/h_150"
        android:focusable="false"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bt_record_txt"
            android:layout_width="@dimen/w_320"
            android:layout_height="@dimen/h_95"
            android:gravity="top|center_horizontal"
            android:text="播放记录"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_qinbao"
            android:textSize="@dimen/w_50" />
    <ImageView
        android:layout_width="@dimen/w_320"
        android:layout_height="@dimen/h_75"
        android:layout_alignBottom="@+id/bt_record_txt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/select_item_1"
        android:focusable="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/linearLayout1">

        <LinearLayout
            android:id="@+id/lin_top"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/h_45"
            android:layout_marginLeft="@dimen/w_88"
            android:layout_height="@dimen/h_105"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:focusable="false"
                android:gravity="top"
                android:text="按"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_no_select"
                android:textSize="@dimen/w_45" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:layout_marginLeft="@dimen/w_8"
                android:focusable="false"
                android:text="菜单键"
                android:textColor="@color/white_qinbao"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/w_45" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:text="开启"
                android:gravity="top"
                android:layout_marginLeft="@dimen/w_8"
                android:textColor="@color/text_no_select"
                android:textSize="@dimen/w_45"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h_105"
                android:focusable="false"
                android:text="删除模式哦"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text_no_select"
                android:textSize="@dimen/w_45" />

        </LinearLayout>

        <com.iqinbao.android.songstv.view.GridViewTV
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin_top"
            android:layout_marginTop="@dimen/h_10"
            android:layout_marginLeft="@dimen/w_74"
            android:layout_marginRight="@dimen/w_76"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:numColumns="4"
            android:horizontalSpacing="@dimen/w_42"
            android:scrollbars="none" />

    </RelativeLayout>

    <com.iqinbao.android.songstv.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
